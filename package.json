{
  "name": "infor-ln-devtools",
  "displayName": "Infor LN DevTools",
  "description": "Developer tools for Infor LN ERP in VS Code and Cursor. Import, export, and compile LN components using supported LN utilities.",
  "version": "1.0.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/shubham225/infor-ln-devtools.git"
  },
  "icon": "resources/icon.png",
  "publisher": "shubham-shinde",
  "engines": {
    "vscode": "^1.95.0"
  },
  "categories": [
    "Productivity",
    "Programming Languages",
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "baanc",
        "aliases": [
          "Baan C",
          "baanc",
          "BaanC"
        ],
        "extensions": [
          ".bc"
        ],
        "configuration": "./src/language-support/language-configuration.json",
        "icon": {
          "light": "./resources/script.png",
          "dark": "./resources/script.png"
        }
      }
    ],
    "grammars": [
      {
        "language": "baanc",
        "scopeName": "source.bc",
        "path": "./src/language-support/syntaxes/baanc.tmLanguage.json"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Infor LN DevTools",
      "properties": {
        "ee-erp-devtools.autoCompileOnSave": {
          "type": "boolean",
          "default": false,
          "description": "Automatically compile BaanC scripts when saved"
        },
        "ee-erp-devtools.serverUrl": {
          "type": "string",
          "default": "",
          "description": "ERP Server URL for API communication"
        },
        "baanc.tabSize": {
          "type": "number",
          "default": 8,
          "description": "Tab size for BaanC files"
        },
        "baanc.insertSpaces": {
          "type": "boolean",
          "default": false,
          "description": "Insert spaces instead of tabs for BaanC files"
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "ln-devtools-explorer",
          "title": "Infor LN DevTools",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "project-explorer.refresh",
          "when": "view == project-explorer",
          "group": "navigation@1"
        },
        {
          "command": "project-explorer.addProject",
          "when": "view == project-explorer",
          "group": "navigation@2"
        },
        {
          "command": "project-explorer.importProject",
          "when": "view == project-explorer",
          "group": "navigation@3"
        },
        {
          "command": "component-explorer.refresh",
          "when": "view == component-explorer",
          "group": "navigation@1"
        },
        {
          "command": "component-explorer.search",
          "when": "view == component-explorer",
          "group": "navigation@2"
        },
        {
          "command": "selected-components.import",
          "when": "view == selected-components",
          "group": "navigation@1"
        }
      ],
      "view/item/context": [
        {
          "command": "project-explorer.importByPMC",
          "when": "view == project-explorer && viewItem == projectNode",
          "group": "inline@1"
        },
        {
          "command": "project-explorer.closeProject",
          "when": "view == project-explorer && viewItem == projectNode",
          "group": "inline@2"
        },
        {
          "command": "project-explorer.editProject",
          "when": "view == project-explorer && viewItem == projectNode",
          "group": "management@1"
        },
        {
          "command": "project-explorer.closeProject",
          "when": "view == project-explorer && viewItem == projectNode",
          "group": "management@2"
        },
        {
          "command": "project-explorer.copyFile",
          "when": "view == project-explorer && (viewItem == file || viewItem == baanScript)",
          "group": "5_cutcopypaste@1"
        },
        {
          "command": "project-explorer.copyPath",
          "when": "view == project-explorer && (viewItem == file || viewItem == baanScript)",
          "group": "5_cutcopypaste@2"
        },
        {
          "command": "project-explorer.copyRelativePath",
          "when": "view == project-explorer && (viewItem == file || viewItem == baanScript)",
          "group": "5_cutcopypaste@3"
        },
        {
          "command": "project-explorer.revealInExplorer",
          "when": "view == project-explorer && (viewItem == file || viewItem == baanScript)",
          "group": "7_modification@1"
        },
        {
          "command": "project-explorer.openInTerminal",
          "when": "view == project-explorer && (viewItem == file || viewItem == baanScript)",
          "group": "7_modification@2"
        },
        {
          "command": "component-explorer.select",
          "when": "view == component-explorer && viewItem == componentNode",
          "group": "inline"
        },
        {
          "command": "selected-components.remove",
          "when": "view == selected-components && viewItem == componentNode",
          "group": "inline"
        }
      ],
      "editor/title": [
        {
          "command": "project-explorer.compileScript",
          "group": "navigation",
          "when": "resourceExtname == .bc"
        }
      ]
    },
    "views": {
      "ln-devtools-explorer": [
        {
          "id": "project-explorer",
          "name": "Projects"
        },
        {
          "id": "component-explorer",
          "name": "Components",
          "filter": {
            "type": "tree",
            "mode": "highlight"
          }
        },
        {
          "id": "selected-components",
          "name": "Selected Components"
        }
      ]
    },
    "commands": [
      {
        "command": "project-explorer.refresh",
        "category": "Infor LN DevTools",
        "title": "Refresh Projects",
        "icon": "$(refresh)"
      },
      {
        "command": "project-explorer.addProject",
        "category": "Infor LN DevTools",
        "title": "New Project",
        "icon": "$(add)"
      },
      {
        "command": "project-explorer.importProject",
        "category": "Infor LN DevTools",
        "title": "Import Project",
        "icon": "$(folder-opened)"
      },
      {
        "command": "project-explorer.editProject",
        "category": "Infor LN DevTools",
        "title": "Edit Project",
        "icon": "$(edit)"
      },
      {
        "command": "project-explorer.setActive",
        "category": "Infor LN DevTools",
        "title": "Set as Active Project",
        "icon": "$(check)"
      },
      {
        "command": "project-explorer.importByPMC",
        "category": "Infor LN DevTools",
        "title": "Import from PMC",
        "icon": "$(cloud-download)"
      },
      {
        "command": "project-explorer.closeProject",
        "category": "Infor LN DevTools",
        "title": "Close Project",
        "icon": "$(close)"
      },
      {
        "command": "component-explorer.refresh",
        "category": "Infor LN DevTools",
        "title": "Refresh Component",
        "icon": "$(refresh)"
      },
      {
        "command": "component-explorer.configure",
        "category": "Infor LN DevTools",
        "title": "Extension Settings",
        "icon": "$(settings)"
      },
      {
        "command": "component-explorer.search",
        "category": "Infor LN DevTools",
        "title": "Search Components",
        "icon": "$(search)"
      },
      {
        "command": "component-explorer.select",
        "title": "Select Component",
        "icon": "$(add)"
      },
      {
        "command": "selected-components.import",
        "category": "Infor LN DevTools",
        "title": "Import Selected",
        "icon": "$(arrow-circle-down)"
      },
      {
        "command": "selected-components.remove",
        "category": "Infor LN DevTools",
        "title": "Remove from Selection",
        "icon": "$(x)"
      },
      {
        "command": "project-explorer.copyFile",
        "category": "Infor LN DevTools",
        "title": "Copy"
      },
      {
        "command": "project-explorer.copyPath",
        "category": "Infor LN DevTools",
        "title": "Copy Path"
      },
      {
        "command": "project-explorer.copyRelativePath",
        "category": "Infor LN DevTools",
        "title": "Copy Relative Path"
      },
      {
        "command": "project-explorer.revealInExplorer",
        "category": "Infor LN DevTools",
        "title": "Reveal in File Explorer"
      },
      {
        "command": "project-explorer.openInTerminal",
        "category": "Infor LN DevTools",
        "title": "Open in Integrated Terminal"
      },
      {
        "command": "project-explorer.compileScript",
        "category": "EE ERP DevTools",
        "title": "Compile Script",
        "icon": "$(play)"
      }
    ],
    "viewsWelcome": [
      {
        "view": "project-explorer",
        "contents": "No projects found.\n[New Project](command:project-explorer.addProject)\nCreate a project to start importing components."
      },
      {
        "view": "component-explorer",
        "contents": "No components found.\nUse the 'Configure' command to set up the server connection and load components."
      },
      {
        "view": "selected-components",
        "contents": "No components selected.\nSelect components from the Components view to import them."
      }
    ],
    "keybindings": [
      {
        "command": "component-explorer.search",
        "key": "ctrl+f",
        "when": "focusedView == component-explorer || focusedView == selected-components"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/adm-zip": "^0.5.7",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.95.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.27.1",
    "eslint": "^9.39.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.1"
  },
  "dependencies": {
    "adm-zip": "^0.5.16",
    "axios": "^1.13.2",
    "xml2js": "^0.6.2"
  }
}
