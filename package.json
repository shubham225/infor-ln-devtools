{
  "name": "infor-ln-devtools",
  "displayName": "Infor LN DevTools",
  "description": "Developer tools for Infor LN ERP in VS Code and Cursor. Import, export, and compile LN components using supported LN utilities.",
  "version": "0.0.1",
  "publisher": "shubham-shinde",
  "engines": {
    "vscode": "^1.95.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "ln-devtools-explorer",
          "title": "Infor LN DevTools",
          "icon": "resources/extension-logo.svg"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "component-explorer.refresh",
          "when": "view == component-explorer",
          "group": "navigation"
        },
        {
          "command": "selected-components.import",
          "when": "view == selected-components",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "component-explorer.select",
          "when": "view == component-explorer && viewItem == leafNode",
          "group": "inline"
        },
        {
          "command": "selected-components.remove",
          "when": "view == selected-components && viewItem == leafNode",
          "group": "inline"
        }
      ]
    },
    "views": {
      "ln-devtools-explorer": [
        {
          "id": "component-explorer",
          "name": "Components"
        },
        {
          "id": "selected-components",
          "name": "Selected Components"
        }
      ]
    },
    "commands": [
      {
        "command": "component-explorer.refresh",
        "category": "Infor LN DevTools",
        "title": "Refresh Component",
        "icon": "$(refresh)"
      },
      {
        "command": "component-explorer.select",
        "title": "Select Component",
        "icon": "$(add)"
      },
      {
        "command": "selected-components.import",
        "category": "Infor LN DevTools",
        "title": "Import Selected",
        "icon": "$(cloud-download)"
      },
      {
        "command": "selected-components.remove",
        "category": "Infor LN DevTools",
        "title": "Remove from Selection",
        "icon": "$(x)"
      }
    ],
    "viewsWelcome": [
      {
        "view": "component-explorer",
        "contents": "No components found.\n[Refresh Explorer](command:component-explorer.refresh)"
      },
      {
        "view": "selected-components",
        "contents": "No components selected.\nSelect components from the Components view to import them."
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.107.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.27.1",
    "eslint": "^9.39.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.1"
  },
  "dependencies": {
    "adm-zip": "^0.5.16",
    "axios": "^1.13.2"
  }
}
